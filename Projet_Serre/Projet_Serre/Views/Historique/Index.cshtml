@model Projet_Serre.Models.HistoriqueViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Historique</h2>

<canvas id="humiditeChart" style="width: 1000px; height: 800px;"></canvas>


@section scripts{
    @Scripts.Render("~/Scripts/Chart.js");
    <script>            //TODO: Ajouter des info dans le tooltip
    var data = {
        labels: @Html.Raw(Model.Labels),
        datasets: [
                {
                    label: "Humidite",
                    fill: false,
                    lineTension: 0.1,
                    backgroundColor: "rgba(51,122,183,0.4)",
                    borderColor: "rgba(51,122,183,1)",
                    borderCapStyle: 'butt',
                    borderDash: [],
                    borderDashOffset: 0.0,
                    borderJoinStyle: 'miter',
                    pointBorderColor: "rgba(51,122,183,1)",
                    pointBackgroundColor: "#fff",
                    pointBorderWidth: 1,
                    pointHoverRadius: 5,
                    pointHoverBackgroundColor: "rgba(51,122,183,1)",
                    pointHoverBorderColor: "rgba(220,220,220,1)",
                    pointHoverBorderWidth: 2,
                    pointRadius: 1,
                    pointHitRadius: 10,
                    data: @Model.HumiditeData,
                },
                {
                    label: "Temperature Interieure",
                    fill: false,
                    lineTension: 0.1,
                    backgroundColor: "rgba(217,130,79,0.4)",
                    borderColor: "rgba(217,130,79,1)",
                    borderCapStyle: 'butt',
                    borderDash: [],
                    borderDashOffset: 0.0,
                    borderJoinStyle: 'miter',
                    pointBorderColor: "rgba(217,130,79,1)",
                    pointBackgroundColor: "#fff",
                    pointBorderWidth: 1,
                    pointHoverRadius: 5,
                    pointHoverBackgroundColor: "rgba(217,130,79,1)",
                    pointHoverBorderColor: "rgba(220,220,220,1)",
                    pointHoverBorderWidth: 2,
                    pointRadius: 1,
                    pointHitRadius: 10,
                    data: @Model.TemperatureInterieurData,
                },
                {
                    label: "Temperature Exterieure",
                    fill: false,
                    lineTension: 0.1,
                    backgroundColor: "rgba(217,83,79,0.4)",
                    borderColor: "rgba(217,83,79,1)",
                    borderCapStyle: 'butt',
                    borderDash: [],
                    borderDashOffset: 0.0,
                    borderJoinStyle: 'miter',
                    pointBorderColor: "rgba(217,83,79,1)",
                    pointBackgroundColor: "#fff",
                    pointBorderWidth: 1,
                    pointHoverRadius: 5,
                    pointHoverBackgroundColor: "rgba(217,83,79,1)",
                    pointHoverBorderColor: "rgba(220,220,220,1)",
                    pointHoverBorderWidth: 2,
                    pointRadius: 1,
                    pointHitRadius: 10,
                    data: @Model.TemperatureExterieurData,
                }
            ]
        };

        var humiditeChart = new Chart($("#humiditeChart"), {
            type: 'line',
            data: data,
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}